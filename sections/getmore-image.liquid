{{ 'getmore-image.css' | asset_url | stylesheet_tag }}

<section class="">
  <div class="getmore-banner ">
    <div class="getmore-banner-mobile">
      {% if section.settings.banner_mob != blank %}
        <img src="{{ section.settings.banner_mob | img_url: 'master'}}">
      {% endif %}
    </div>
    <div class="getmore-banner-desk">
      {% if section.settings.banner != blank %}
        <img src="{{ section.settings.banner | img_url: 'master'}}">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Getmore image",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_mob",
      "label": "Imagen movil"
    },
    {
      "type": "image_picker",
      "id": "banner",
      "label": "Imagen"
    }
  ],
  "presets": [
    {
      "name": "Getmore image"
    }
  ]
}
{% endschema %}
