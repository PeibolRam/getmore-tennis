{{ 'getmore-collections-with-button.css' | asset_url | stylesheet_tag }}

<style>
  .getmore-collections-with-button {
    background-color: {{ section.settings.bg_color }}
  }
  .getmore-collections-tag p {
    color: {{ section.settings.tag_color }};
  }

  .getmore-collections-text h2 {
    color: {{ section.settings.title_color }}
  }

  .getmore-collections-text p {
    color: {{ section.settings.text_color }}
  }

  .getmore-collections-button a {
    color: {{ section.settings.btn_color }};
    border: solid 1px {{ section.settings.btn_color }};
  }
</style>

<section class="getmore-collections-with-button">
  <div class="page-width getmore-collections-with-button-container">
    {% if section.settings.tag != blank %}
      <div class="getmore-collections-tag">
        <p>{{ section.settings.tag }}</p>
      </div>
    {% endif %}

    <div class="getmore-collections-text">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p>{{ section.settings.text }}</p>
      {% endif %}
    </div>

    {% if section.settings.link != blank %}
      <div class="getmore-collections-button">
        <a href="{{ section.settings.link }}">
          {{- section.settings.btn_text -}}
          <svg xmlns="http://www.w3.org/2000/svg" width="23" height="6" viewBox="0 0 23 6">
            <path fill="#29304A" fill-rule="evenodd" d="M22.908 2.7L20.428.128a.39.39 0 0 0-.579 0 .425.425 0 0 0 0 .6l1.778 1.843H.413C.165 2.57 0 2.74 0 3c0 .257.165.428.413.428h21.213l-1.779 1.844a.425.425 0 0 0 0 .6.44.44 0 0 0 .29.128.44.44 0 0 0 .289-.129l2.48-2.572a.531.531 0 0 0 .002-.6z"/>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Getmore collections",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo",
      "default": "#f3f4f8"
    },
    {
      "type": "text",
      "id": "tag",
      "label": "Etiqueta",
      "default": "Tennis"
    },
    {
      "type": "color",
      "id": "tag_color",
      "label": "Color de la etiqueta",
      "default": "#cbe346"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titulo"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Color del titulo",
      "default": "#000"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Texto"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#000"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "btn_color",
      "label": "Color del botón",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Texto del botón",
      "default": "Ver más"
    }
  ],
  "presets": [
    {
      "name": "Getmore collections"
    }
  ]
}
{% endschema %}
